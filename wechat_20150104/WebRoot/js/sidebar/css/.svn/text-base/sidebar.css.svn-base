.sidebar{
	width: 180px;
	margin: 0 auto;
	display: block;
}
.sidebar .side-item{
	margin: 1px 0 1px 0;
}
.sidebar .side-menu{
	margin:1px 10px;
	height:40px;
	text-align:middle;
}
.sidebar a{
	text-decoration: none;
	font-family:幼圆;
	color: #663333;
}
.sidebar a:hover{
	color: #c40001;
}
.sidebar ul{
	margin: 0;
	padding-left: 40px;
}
.sidebar li{
	list-style-type: none;
	height: 16px;
	margin: 2px 0 5px 10px;
	font-family:幼圆;
	font-size:14px;
}
.sidebar .menu-expandable{
	display: block;
	padding: 9px 0 0 52px;
	font-size: 16px;
	color: #663333;
}
.sidebar .submenus{
	margin: 0;
}