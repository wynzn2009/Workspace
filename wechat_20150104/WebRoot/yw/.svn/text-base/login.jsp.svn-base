<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%
String path = request.getContextPath();
String basePath = request.getScheme()+"://"+request.getServerName()+":"+request.getServerPort()+path+"/";
%>

<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
  <head>
    <base href="<%=basePath%>">
    
    <title>登陆页面</title>
    
	<meta http-equiv="pragma" content="no-cache">
	<meta http-equiv="cache-control" content="no-cache">
	<meta http-equiv="expires" content="0">    
	<meta http-equiv="keywords" content="keyword1,keyword2,keyword3">
	<meta http-equiv="description" content="This is my page">
	
	<link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css">
	<script src="http://code.jquery.com/jquery-1.8.3.min.js"></script>
	<script src="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js"></script>
	<!--
	<link rel="stylesheet" type="text/css" href="styles.css">
	-->
	<style type="text/css">
		#info{
			margin:50px;
		}
		#btn{
			text-align:center;
		}
	</style>

  </head>
  
  <body>
    <div data-role="page">
    	<div data-role="header">
    		<h1><span style="font-size:30px">登陆</span></h1>
    	</div>
    	<div data-role="content">
    		<div id="info">
	    		账号：<input type="text" name="username" id="username" placeholder="请输入您的账号"/>    
	    		密码：<input type="text" name="password" id="password" placeholder="请输入您的密码"/>
	    		<br/><br/>
    		</div>
    		<div id="btn">
    			<input type="button" data-inline="true" data-icon="check" value="确定">&nbsp;&nbsp;&nbsp;
    			<input type="button" data-inline="true" data-icon="delete" value="取消">
    		</div>
    	</div>
    	<div data-role="footer">
    		<h3>@ 2014 bupt</h3>
    	</div>
    </div>
  </body>
</html>
